<%=form_for [:admin, @text] do |f|%>
<div class="clearfix mbm">
  <%= link_to "Оменить", admin_texts_path, :class=>"submit-button right"%>
  <%=f.submit "Сохранить", :class=>"submit-button right mrs"%>
</div>
<fieldset>
  <div class="field clearfix">
    <div class="col3of4">
      <label for="">Название</label>
      <%=f.text_field :name, :class=>"text"%>
    </div>
  </div>
  <div class="fieldclearfix">
    <div class="col3of4">
      <label for="">Текст</label>
      <%= id = @text.id == 8 ? "" : "pannel"%>
      <%=f.text_area :text, :class=>"text", :id=>id, :style=> "width: 750px; height: 300px;"%>
    </div>
  </div>
</fieldset>
<%end%>