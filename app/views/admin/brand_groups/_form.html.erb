<%=form_for [:admin, @brand_group] do |f|%>
  <div class="clearfix mbm">
    <%= link_to "Отменить", admin_brand_groups_path, :class=>"submit-button right"%>
    <%=f.submit "Сохранить", :class=>"submit-button right mrs"%>
  </div>
  <fieldset>
    <div class="field clearfix">
      <div class="col2of4">
        <label for="">Название группы брендов</label>
        <%=f.text_field :name, :class=>"text"%>
      </div>
    </div>
    <label for=""><h3>Групповой курс валют</h3></label>
    <div class="clearfix pam">
      <div class="field">
        <strong>1 USD = </strong>
        <%=f.text_field :usd_to_uah, :class=>"text",  :style => "width: 100px"%>
      </div>
      <div class="field">
        <strong>1 EUR = </strong>
        <%=f.text_field :eur_to_uah, :class=>"text",  :style => "width: 100px"%>
      </div>
    </div>
  </fieldset>
<%end%>

