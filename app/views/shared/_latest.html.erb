<div class="row white m-l-m10 m-t-20">
  <div class="col-md-12 hidden-xs">
    <h3 class="opensans red"><strong><i>Новые поступления</i></strong></h3>
  </div>
    <div class="col-xs-12 visible-xs-block">
    <h4 class="opensans red p-t-15 p-l-15"><strong><i>Новые поступления</i></strong></h4>
  </div>
    <% @latest_products.each do |product|%>
    <div class="col-md-3 p-b-10 col-sm-4 col-xs-12 p-t-20 latest">
      <%= link_to product_path(product) do %>
        <div class="visible-xs-block col-xs-6 content-center">
          <%= image_tag product.image_url(:thumb),:height=>"150px", :width=>"150px"%>
          <%= render "shared/product_price", :product => product%>
        </div>
        <div class="visible-xs-block col-xs-6 content-center" style="margin-top:50px">
          <span class="product-name vcenter xs-product-name"><%=  product.name %></span>
        </div>
        <div class="hidden-xs content-center">
          <div class="product-image-cover"><%= image_tag product.image_url(:thumb), :class=> "product-image"%></div>
          <%= render "shared/product_price", :product => product%>
          <span class="product-name" ><%=  product.name %></span>
        </div>
      <%end%>
    </div>
    <%end%>
</div>